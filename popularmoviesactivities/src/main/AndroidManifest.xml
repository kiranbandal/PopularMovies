<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kirangisp.popularmoviesui">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- The Main Movie posters activity -->
        <activity
            android:name=".MoviePostersActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- The Movie Details activity -->
        <activity
            android:name=".MovieDetailsInfoActivity"
            android:label="@string/title_activity_movie_details_info"
            android:parentActivityName=".MoviePostersActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MoviePostersActivity" />
        </activity>
    </application>

</manifest>
