<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--LinearLayout in layout_posters_gridview_fragment-->
    <style name="LinearLayoutHoldingPostersGridView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="postesGridView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:columnWidth">@dimen/hdpi_col_width</item>
        <item name="android:gravity">center</item>
        <item name="android:horizontalSpacing">@dimen/hdpi_horizontal_spacing</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:verticalSpacing">@dimen/hdpi_vertical_spacing</item>
        <item name="android:layout_marginTop">@dimen/hdpi_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/hdpi_bottom_margin</item>
        <item name="android:layout_marginLeft">@dimen/hdpi_left_margin</item>
        <item name="android:layout_marginRight">@dimen/hdpi_right_margin</item>
    </style>

    <!--Root layout of Movie Details Fragment-->
    <style name="movieDetailsFragRootRelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--Movie Title TExt View-->
    <style name="movieDetailsTitleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/blackColor</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/movieTitleTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/whiteColor</item>
    </style>


    <!--Movie Poster Image View-->
    <style name="moviePosterImgVeu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_below">@id/titleTextView</item>
        <item name="android:layout_marginLeft">@dimen/posterImgViewLeftMargin</item>
        <item name="android:layout_marginTop">@dimen/posterImgViewTopMargin</item>
    </style>


    <!--Release Date Literal text-->
    <style name="releaseDateLitralText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/titleTextView</item>
        <item name="android:layout_marginLeft">@dimen/releaseDateTextLieralLeftMargin</item>
        <item name="android:layout_marginTop">@dimen/releaseDateTextLieralTopMargin</item>
        <item name="android:layout_toRightOf">@id/moviePosterImgView</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!--Release Date Text view   -->
    <style name="releaseDateTVt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/releaseDateTextLiteral</item>
        <item name="android:layout_marginLeft">@dimen/releaseDateTextTextViewLeftMargin</item>
        <item name="android:layout_marginTop">@dimen/releaseDateTextTextViewTopMargin</item>
        <item name="android:layout_toRightOf">@id/moviePosterImgView</item>
    </style>


    <!--Vote Text Literal  -->
    <style name="voteLtrlText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/releaseDateTextview</item>
        <item name="android:layout_marginLeft">@dimen/voteTextLieralLeftMargin</item>
        <item name="android:layout_marginTop">@dimen/voteTextLieralTopMargin</item>
        <item name="android:layout_toRightOf">@id/moviePosterImgView</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Vote Text View  -->
    <style name="voteTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/voteTextLiteral</item>
        <item name="android:layout_marginLeft">@dimen/voteTextTextViewLeftMargin</item>
        <item name="android:layout_marginTop">@dimen/voteTextTextViewTopMargin</item>
        <item name="android:layout_toRightOf">@id/moviePosterImgView</item>
    </style>


    <!--Synopsis scroll View-->
    <style name="synoScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/moviePosterImgView</item>
        <item name="android:layout_marginBottom">@dimen/synoScrollViewBottomMargin</item>
        <item name="android:layout_marginTop">@dimen/synoScrollViewTopmMargin</item>
    </style>

    <!--Synopsis scroll Text View-->
    <style name="synoTV">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/synoTextViewMargin</item>
        <item name="android:padding">@dimen/synoTextViewPadding</item>
    </style>


</resources>